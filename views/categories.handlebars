{{#if categories}}
<div class="container">
    <ol class="row category-list">   
        {{#each categories}}
        <li class="card" style="max-width: 18rem;">
            <div class="card-body">
                <a class="card-title nav-link" href="/answer/category/{{this.dataValues.id}}">
                <h5 class="card-title">{{this.dataValues.category_name}}</h5>
                </a>
            </div>
        </li>
        {{/each}}

    </ol>
    {{else}}
    <p>Hello world!</p>
</div>
{{/if}}