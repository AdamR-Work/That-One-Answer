{{#if categories}}
<div class="container">
    <ol class="row category-list">   
        {{#each categories}}
        <li class="card w-50">
            <div class="card-body">
                <a class="card-title nav-link" href="/answer/category/{{this.dataValues.id}}">
                <h5>{{this.dataValues.category_name}}</h5>
                </a>
            </div>
        </li>
        {{/each}}

    </ol>
    {{else}}
    <p>Hello world!</p>
</div>
{{/if}}