<article class="wrapper">
    <div class="title">
        {{title}}
        {{!-- <a href="{{id}}" target="_blank">{{title}}</a> --}}
        {{!-- <span>({{format_url post_url}})</span> --}}
    </div>
    <div class="answer">
        {{description}}
    </div>
    <div>
        <ol class="step-list">
            {{#each steps}}
            <li>
                {{dataValues.step_text}}
            </li>
            {{/each}}
        </ol>
    </div>
    <div>
        <form class="step-form">
            <div>
                <textarea name="step-body"></textarea>
            </div>

            <div>
                <button type="submit">Add a step</button>
            </div>
        </form>
    </div>
</article>
